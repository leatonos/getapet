<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DefaultBg"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context=".Activities.HomeActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="237dp"
        android:layout_margin="30dp"
        app:srcCompat="@mipmap/get_a_pet_icon_foreground" />

    <Button
        android:id="@+id/regShelter_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="25dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/coustard"
        android:text="I am a \n Shelter"
        android:textAlignment="center"
        android:textColor="@color/DefaultColorBtnText"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/reg_adopter_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"
        android:backgroundTint="@color/DefaultColorBtnText"
        android:fontFamily="@font/coustard"
        android:text="I am an\n Adopter"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

</LinearLayout>